<launch >
 <arg name="model" default="$(find diff_drive)/urdf/01-diff_drive.urdf"/>
 <param name="robot_description" command="rosrun xacro xacro $(arg model)"/>
 <param name="use_gui" value="true"/>

 <node name="joint_state_publisher" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui"/>
 <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

 <node name="rviz" pkg="rviz" type="rviz" args="-d $(find urdf_tutorial)/rviz/urdf.rviz" required="true"/>

</launch>
